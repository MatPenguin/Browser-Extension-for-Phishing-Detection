{
    "manifest_version": 3,
    "name": "Phishing URL Detector",
    "version": "1.1",
    "description": "Detects and highlights phishing URLs, with an option to disable clicking.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://192.168.0.133:5000/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}
